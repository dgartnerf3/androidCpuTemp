<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:padding="16dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnScan"
            android:text="@string/scan_connect"
            android:layout_width="match_parent" android:layout_height="wrap_content" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDevices"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/unitText"
                android:hint="Temperature Units"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnWriteUnit"
                android:text="Write"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/btnReadUnit"
                android:text="Read"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/temperatureText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="18dp"
                android:hint="Temperature" />

            <Button
                android:id="@+id/btnReadTemperature"
                android:text="Read"
                android:layout_width="wrap_content" android:layout_height="match_parent"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnDisconnect"
            android:text="@string/disconnect"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/logView"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/log" />

    </LinearLayout>

</ScrollView>


